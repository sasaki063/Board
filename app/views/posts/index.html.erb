<h1>投稿一覧</h1>
  <%= link_to '投稿', new_post_path, class: "btn btn-outline-info" %>
    <table>
      <thead>
        <tr>
          <th>掲示板名</th>
          <th>ジャンル</th>
          <th>投稿者</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
              <td><%= post.name %></td>
              <td><%= post.category %></td>
              <td><%= post.created_at.to_s(:datetime_base) %></td>
              <td><%= post.updated_at.to_s(:datetime_base) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
